STOWDEST ?= /usr/local/stow/ffmpeg

CFLAGS=-fpic


debian-dep:
	sudo apt-get install -y yasm
fedora-dep:
	sudo dnf install -y yasm


libvpx:
	git submodule add https://chromium.googlesource.com/webm/$@
update: libvpx
	git submodule update --init
config: libvpx
	$^/configure --prefix=$(STOWDEST) --disable-examples --disable-docs \
		--enable-vp9-postproc --disable-vp10 --as=yasm \
		--enable-runtime-cpu-detect --enable-shared --enable-postproc-visualizer \
		--enable-multi-res-encoding --enable-vp9-temporal-denoising --enable-webm-io
