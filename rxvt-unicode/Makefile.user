

debian-dep:
	sudo apt-get install -y libgdk-pixbuf2.0-dev libstartup-notification0-dev \
		libperl-dev
fedora-dep:
	sudo dnf install -y gdk-pixbuf2-devel startup-notification-devel \
		perl-ExtUtils-Embed perl-ExtUtils-CBuilder perl-ExtUtils-ParseXS

config:
	#sh autogen.sh
	sh configure --prefix=/usr/local/stow/rxvt-unicode \
		--disable-frills --disable-perl --enable-pixbuf --enable-xft --enable-256-color \
		--enable-smart-resize

my-patch: fedora.patch
	patch -b -p1 < $^

post-install:
	cp -Rb misc/* /usr/local/stow/rxvt-unicode
