STOWDEST ?= /usr/local/stow/cdrtools

SUDO = sudo


cdrtools-3.01-fix-20151126-mkisofs-isoinfo.patch:
	wget -O "$@" https://sourceforge.net/projects/cdrtools/files/cdrtools-3.01-fix-20151126-mkisofs-isoinfo.patch/download
cdrtools-3.01.tar.bz2:
	wget -O "$@" https://sourceforge.net/projects/cdrtools/files/cdrtools-3.01.tar.bz2/download
cdrtools-3.01: cdrtools-3.01.tar.bz2
	tar axf $^
	chmod -R u+w "$@"


config: cdrtools-3.01 cdrtools-3.01-fix-20151126-mkisofs-isoinfo.patch
	patch -p0 < cdrtools-3.01-fix-20151126-mkisofs-isoinfo.patch
install:
	$(SUDO) $(MAKE) -C cdrtools-3.01 INS_BASE=$(STOWDEST) $@
