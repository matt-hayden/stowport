STOWDEST = /usr/local/stow/OpenCV

build: update contrib
	[ -d $@ ] || mkdir $@
	cd $@ && cmake -G"Ninja" \
		-D CMAKE_BUILD_TYPE=RELEASE \
		-D CMAKE_INSTALL_PREFIX=$(STOWDEST) \
		-D INSTALL_C_EXAMPLES=OFF \
		-D INSTALL_PYTHON_EXAMPLES=ON \
		-D OPENCV_EXTRA_MODULES_PATH=../contrib/modules \
		-D BUILD_EXAMPLES=ON ../SRC
	#$(MULTIMAKE) -C $@
	cd $@ && ninja


debian-dep:
	sudo apt-get install -y \
		build-essential cmake git ninja-build pkg-config \
		libjpeg62-turbo-dev libtiff5-dev libjasper-dev libpng12-dev \
		libavcodec-dev libavformat-dev libswscale-dev libv4l-dev \
		libgtk2.0-dev \
		libatlas-base-dev gfortran \
		python3-dev python3-numpy
ubuntu-dep:
	sudo apt-get install -y \
		build-essential cmake git ninja-build pkg-config \
		libjpeg8-dev libtiff5-dev libjasper-dev libpng12-dev \
		libavcodec-dev libavformat-dev libswscale-dev libv4l-dev \
		libgtk2.0-dev \
		libatlas-base-dev gfortran \
		python3-dev python3-numpy


SRC: 
	git submodule add -f git://github.com/Itseez/opencv.git $@
contrib:
	git submodule add git://github.com/Itseez/opencv_contrib.git $@

update: SRC
	git submodule update --init
